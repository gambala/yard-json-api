<% if object.has_tag?(:error) %>
  <div class="errors">
    <p class="tag_title">Errors:</p>
    <table>
      <thead>
        <tr>
          <th>HTTP-code</th>
          <th>Description</th>
          <th>JSON</th>
        </tr>
      </thead>
      <tbody>
        <% object.tags(:error).each do |tag| %>
          <tr>
            <td><%= tag.type %></td>
            <td><%= tag.name %></td>
            <td class="code">
              <pre class="example code"><code><%= html_syntax_highlight(tag.text) %></code></pre>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
